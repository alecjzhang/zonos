{
  "manifest_version": 2,

  "name": "Mosaic Sonos App",
  "description": "Mosaic's app to control your Sonos by Amazon Echo",
  "version": "0.1",

  "app": {
    "background": {
      "scripts": ["jquery/jquery-1.11.1.min.js", "upnp.js", "background.js"]
    }
  },

  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "http://*/",
    {
      "socket": ["udp-send-to", "udp-bind", "tcp-listen", "tcp-connect"]
    }
  ],

  "icons": {
    "128": "zonos-logo.png"
  }

}
